<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SupportCompanion.Views"
             xmlns:vm="clr-namespace:SupportCompanion.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SupportCompanion.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <WrapPanel MaxWidth="1250">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid
                Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <views:DeviceInfoWidget IsVisible="{Binding ShowDeviceWidget}" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <views:EvergreenInfoWidget Grid.Row="0" IsVisible="{Binding ShowEvergreenInfo}" />
                        <views:BatteryWidget Grid.Row="1" IsVisible="{Binding ShowBattery}" />
                    </Grid>
                    <views:ActionsWidget IsVisible="{Binding ShowActions}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                    <views:MdmStatusWidget IsVisible="{Binding ShowMdmStatus}" />
                    <views:StorageWidget IsVisible="{Binding ShowStorage}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <views:MunkiUpdatesWidget IsVisible="{Binding ShowMunkiUpdates}" />
                    <views:MunkiPendingAppsWidget IsVisible="{Binding ShowMunkiPendingApps}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </WrapPanel>
</UserControl>